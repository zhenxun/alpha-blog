<section class="section-show">
  
  <h1 class="section-show__top-title">Title: <%= @article.title %></h1>
  <div class="well col-xs-8">
    <% if @article.user %>
    <ul class="listing">
        <div class="row text-center">
            <div class="col-md-4 col-md-offset-4">
              <li>Created by:</li>
              <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %> </li>
              <li class="article-title">
                <%= link_to @article.user.username, user_path(@article.user) %>
              </li>
              <li>
                <small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles  %></small>
              </li>
            </div>
        </div>

    </ul>
    <% end %>
    <h4><strong>Description:</strong></h4>
    <hr>
    
    <div class="section-show__description-area">
        <%= simple_format(@article.description) %>
    </div>
    
  
    <div class="section-show__article-action">
       <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
       <%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete the article?" }, class: "btn btn-xs btn-danger" %>
       <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
    </div>
  
  </div>
</section>
