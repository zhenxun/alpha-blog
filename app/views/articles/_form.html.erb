<% if @article.errors.any? %>
  <div class="alert alert-warning alert-messages" role="alert">
    <h3>The following errors prevented the article from getting created:</h3>
    <ul class="alert-messages__list">
    <% @article.errors.full_messages.each do |msg| %>
      <li><span class="glyphicon glyphicon-remove alert-messages__glyphicon" aria-hidden="true"></span> <%= msg %></li>
    <% end %>
      </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
     <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
         <div class="control-label col-sm-1">
            <%= f.label :title %>
         </div>
          <div class="col-sm-9">
             <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofoucus: true %>
          </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-1">
           <%= f.label :description %>
        </div>
        <div class="col-sm-9">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description about article title" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    
    <div class="col-xs-12 col-xs-offset-5 bottom-link">
     [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
    
  </div>
</div>
