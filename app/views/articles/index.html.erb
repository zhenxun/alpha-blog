<section class="section-article-list">
<h1 class="section-article-list__top-title">Your Articles Listing</h1>

  <div class="col-sm-12 text-right">
    <p> 
      <%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create new article'.html_safe, new_article_path, class: "btn btn-info btn-sm"%>
    </p>
  </div>
  
<table class="table">
  <tr>
     <th>No</th>
     <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  
  <% @articles.each_with_index do |article, index|%>
    <tr>
      <td><%= index + 1   %></td>
      <td><%= article.title %></td>
      <td><%= truncate(article.description, length: 100) %></td>
      <td><%= link_to "Edit", edit_article_path(article)  %></td>
      <td><%= link_to "Show", article_path(article)  %></td>
      <td><%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
  
</table>
  
</section>
