<% if obj.errors.any? %>
  <div class="alert alert-warning alert-messages" role="alert">
    <h4>The following <%= pluralize(obj.errors.count, "error") %> prevented the article from getting created:</h4>
    <ul class="alert-messages__list">
    <% obj.errors.full_messages.each do |msg| %>
      <li><span class="glyphicon glyphicon-remove alert-messages__glyphicon" aria-hidden="true"></span> <%= msg %></li>
    <% end %>
      </ul>
  </div>
<% end %>