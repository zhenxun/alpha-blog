<h1 align="center">Create new categoris</h1>

<%= render 'shared/errors', obj: @category %>


<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
         <div class="control-label col-sm-1">
            <%= f.label :name %>
         </div>
          <div class="col-sm-9">
             <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofoucus: true %>
          </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
<% end %>
