<h1 class="signup-top-title">Signup for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-md-12">
     <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
         <div class="control-label col-sm-1">
            <%= f.label :username %>
         </div>
          <div class="col-sm-9">
             <%= f.text_field :username, class: "form-control", placeholder: "Username", autofoucus: true %>
          </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-1">
           <%= f.label :email %>
        </div>
        <div class="col-sm-9">
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-1">
           <%= f.label :password %>
        </div>
        <div class="col-sm-9">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    
    <div class="col-xs-12 col-xs-offset-5 bottom-link">
     [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
    
  </div>
</div>
